{
  "name": "youtube-playlist-duration-calculator",
  "description": "An extension to calculate & display the total duration of a youtube playlist.",
  "author": "nrednav",
  "private": true,
  "version": "2.1.0-beta.2",
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=7"
  },
  "scripts": {
    "dev": "vite",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "watch": "vite build --watch --mode development",
    "lint": "eslint .",
    "format": "prettier --ignore-unknown --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "vite": "^4.5.2",
    "vite-plugin-web-extension": "^3.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "lint-staged": {
    "**/*.js": [
      "npx eslint --ext .js",
      "npx prettier --ignore-unknown --write"
    ]
  }
}
